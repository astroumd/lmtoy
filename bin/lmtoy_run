#! /usr/bin/env bash
#
#    set up the script generator for given project(s)
#

if [ -z $LMTOY ]; then
    echo "LMTOY environment not loaded (odd)"
    exit 0
fi

if [ -z $WORK_LMT ]; then
    echo "LMTOY WORK_LMT not set up (odd)"
    exit 0
fi

cd $WORK_LMT

if [ ! -d lmtoy_run ]; then
    echo git clone https://github.com/lmtoy/lmtoy_run
else
    echo "great, lmtoy_run exists"
fi

cd lmtoy_run

PID=$1

if [ ! -d lmtoy_$PID ]; then
    echo "no lmtoy_$PID, these are the available script generators for $PID:"
    ls -d lmtoy_*
    exit 0
fi

cd lmtoy_$PID
ls
